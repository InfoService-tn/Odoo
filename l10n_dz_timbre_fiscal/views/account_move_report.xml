<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <template id="report_invoice_document_timbre" inherit_id="account.report_invoice_document">
            <xpath expr="////div[@id='total']/div/table/tr[2]" position="replace">
                <tr class="border-black o_total">
                    <td><strong>Total TTC</strong></td>
                    <td class="text-right">
                        <t t-if="o.payment_mode_type == 'cash'">
                            <span t-esc="o.amount_total + o.amount_timbre" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                        </t>
                        <t t-if="o.payment_mode_type != 'cash'">
                            <span t-field="o.amount_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                        </t>
                    </td>
                </tr>
            </xpath>
            <xpath expr="//div[@id='total']/div/table/tr[2]" position="before">
                <tr t-if="o.payment_mode_type == 'cash'" style="">
                    <td>Timbre</td>
                    <td class="text-right">
                        <span t-field="o.amount_timbre" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                    </td>
                </tr>
            </xpath>
        </template>
    </data>
</odoo>